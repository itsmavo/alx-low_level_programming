#include "main.h"
/**
 * _strncat - concats two arrays
 *
 * @dest: destination of concat
 * @src: source arry to concat
 * @n: times to append
 *
 *Return: char
 */
char *_strncat(char *dest, char *src, int n)
{
  int i;
  int j;

  for (j = 0; dest[j] != '\0'; j++)
    {}
  for (i = 0; i < n && src[i] != '\0'; i++)
    {
      dest[j + 1] = src[i]; 
    }
  dest[j + 1] = '\0';

  return (dest);
}
